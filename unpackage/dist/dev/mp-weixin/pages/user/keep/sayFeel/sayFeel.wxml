<view class="sayfeel"><view class="send-msg"><view class="send-top"><view class="people-content"><view class="img"><image src="{{goods.fromuser.headimg}}"></image></view><view><text>{{goods.fromuser.name}}</text><text>{{goods.fromuser.phone}}</text></view></view><view class="right">评价快递员</view></view><view class="send-bottom"><radio-group class="send-bottom"><label class="radio"><radio value="1" data-event-opts="{{[['tap',[['bad',[0]]]]]}}" bindtap="__e"></radio>不满意</label><label class="radio"><radio value="2" checked="true" data-event-opts="{{[['tap',[['good',[1]]]]]}}" bindtap="__e"></radio>满意</label></radio-group></view></view><view class="product-msg"><block wx:for="{{goodsList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="product-top"><view class="list"><image src="{{item.goods_logo}}"></image><view class="product-top-right"><text>{{''+item.goods_title+''}}</text><view class="price-num"><view class="price"><text>￥</text><text>{{item.price_selling}}</text></view><view class="num">{{"x"+item.number}}</view></view></view></view><view class="product-bottom"><view class="left">评分</view><view class="right"><uni-rate vue-id="{{'1-'+index}}" max="5" value="{{num}}" data-event-opts="{{[['^change',[['changeStar',['$event',index]]]]]}}" bind:change="__e" bind:__l="__l"></uni-rate></view></view><view class="upload-photo"><textarea placeholder="分享本次购物体验" data-event-opts="{{[['blur',[['getcontent',['$event',index]]]]]}}" bindblur="__e"></textarea><view class="upload-imgs"><block wx:for="{{imgUrl[index]}}" wx:for-item="item" wx:for-index="num" wx:key="num"><image class="uploadImg" src="{{item}}"></image></block><view data-event-opts="{{[['tap',[['addPhoto',[index]]]]]}}" class="add-photo" bindtap="__e"><image src="../../../../static/img/sayfeel/photo.png"></image><text>添加图片</text></view></view></view></view></block></view><view data-event-opts="{{[['tap',[['save']]]]}}" class="submit" bindtap="__e"><view>提交</view></view></view>