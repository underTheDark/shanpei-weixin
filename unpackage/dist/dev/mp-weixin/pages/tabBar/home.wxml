<view class="home"><view class="header" style="{{'position:'+(headerPosition)+';'+('top:'+(headerTop)+';')+('opacity:'+(afterHeaderOpacity)+';')}}"><view class="addr"><view class="icon location"></view>{{''+city+''}}</view><view class="input-box"><input placeholder="搜索商品名称" placeholder-style="color:#c0c0c0;" data-event-opts="{{[['tap',[['toSearch']]]]}}" bindtap="__e"/><view class="icon search"></view></view><view class="icon-btn"><block wx:if="{{msgList.length>0}}"><view class="hongdian"></view></block><view hidden="{{!(msg)}}" class="hongdian"></view><view data-event-opts="{{[['tap',[['toMsg',['$event']]]]]}}" class="icon tongzhi" bindtap="__e"></view></view></view><view class="place"></view><view class="swiper"><view class="swiper-box"><swiper circular="true" autoplay="true" data-event-opts="{{[['change',[['swiperChange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{swiperList}}" wx:for-item="swiper" wx:for-index="index" wx:key="id"><swiper-item current="index"><image src="{{swiper.cover}}" data-event-opts="{{[['tap',[['toSwiper',[index]]]]]}}" bindtap="__e"></image></swiper-item></block></swiper><view class="indicator"><view>{{currentSwiper+1+''}}</view><view>{{'/ '+swiperList.length}}</view></view></view></view><view class="category-list"><block wx:for="{{categoryList}}" wx:for-item="row" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['toCategory',['$0'],[[['categoryList','',index]]]]]]]}}" class="category" bindtap="__e"><view class="img"><image src="{{row.logo}}"></image></view><view class="text">{{row.title}}</view></view></block></view><view class="bj-color"></view><view data-event-opts="{{[['tap',[['skipGetgoods',['$event']]]]]}}" class="banner" bindtap="__e"><image src="{{sendUrl}}"></image></view><view class="promotion"><view class="promotion-head"><view class="promotion-head-left"><view class="title _h2">限时抢购</view><view class="english"><text>FLASH</text><text>SALES</text></view></view><view data-event-opts="{{[['tap',[['moreLimit',['$event']]]]]}}" class="promotion-head-right" bindtap="__e">更多</view></view><view class="limit-list"><block wx:for="{{limitList}}" wx:for-item="row" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['limitGoods',['$0'],[[['limitList','',index]]]]]]]}}" class="limit-list-item" bindtap="__e"><view class="item-img"><image src="{{row.cover}}"></image></view></view></block></view></view><view class="hot promotion"><view class="promotion-head"><view class="promotion-head-left"><view class="title _h2">热销产品</view><view class="english"><text>HOT-SALE</text><text>PRODUCT</text></view></view><view data-event-opts="{{[['tap',[['moreLoad',['$event']]]]]}}" class="promotion-head-right" bindtap="__e">更多</view></view><view class="hot-list"><block wx:for="{{hotList}}" wx:for-item="row" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['toGoods',['$0'],[[['hotList','',index]]]]]]]}}" class="hot-list-item" bindtap="__e"><view class="item-img"><image src="{{row.logo}}"></image></view><view class="item-title">{{row.title}}</view><view class="item-price"><text>{{"￥"+row.price}}</text><text>{{"￥"+row.market_price}}</text></view></view></block></view></view><view class="goods-list"><view class="title">为你推荐</view><view class="product-list"><block wx:for="{{productList}}" wx:for-item="product" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['toGoods',['$0'],[[['productList','',index]]]]]]]}}" class="product" bindtap="__e"><image mode="widthFix" src="{{product.logo}}"></image><view class="name">{{product.title}}</view><view class="info"><view class="price">{{"￥"+product.price}}</view><view class="slogan">{{"￥"+product.market_price}}</view></view></view></block></view></view><uni-load-more vue-id="1" status="{{status}}" showIcon="{{showIcon}}" bind:__l="__l"></uni-load-more></view>